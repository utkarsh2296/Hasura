<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="rajhack.hasura.utkarshdubey.hasura.MainActivity">

    <TextView
        android:id="@+id/type_user"
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:background="#179bc7"
        android:text="\n\n\n\nAs User"
        android:textColor="#fff"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:clickable="true"/>
    <TextView
        android:id="@+id/type_car"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:background="#c64343"
        android:text="\n\n\n\nAs Car"
        android:textColor="#fff"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"/>
</LinearLayout>
